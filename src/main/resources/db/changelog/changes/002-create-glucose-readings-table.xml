<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="202511071329" author="jabes">
        <createTable tableName="glucose_readings">

            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="glucose_readings_id_pk"/>
            </column>

<!--            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>-->

            <column name="glucose_value" type="DECIMAL(5,2)">
                <constraints nullable="false"/>
            </column>

            <column name="time_stamp" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="trend" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>

        </createTable>

