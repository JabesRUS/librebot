<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="202511071400" author="jabes">
        <createTable tableName="notification_settings">

            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="notification_settings_id_pk"/>
            </column>

            <column name="user_id" type="BIGINT">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="low_threshold" type="DECIMAL(5,2)">
                <constraints nullable="false"/>
            </column>

            <column name="high_threshold" type="DECIMAL(5,2)">
                <constraints nullable="false"/>
            </column>

            <column name="notifications_enabled" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>

            <column name="check_interval_minutes" type="INTEGER">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <!-- ОТДЕЛЬНО добавляем Foreign Key
        <addForeignKeyConstraint
        baseTableName="дочерняя_таблица"
        baseColumnNames="колонка_с_FK"
        constraintName="имя_ограничения"
        referencedTableName="родительская_таблица"
        referencedColumnNames="колонка_родителя"
        onDelete="действие_при_удалении"/>
        -->
        <addForeignKeyConstraint
                baseTableName="notification_settings"
                baseColumnNames="user_id"
                constraintName="fk_notification_settings_user"
                referencedTableName="users"
                referencedColumnNames="id"
                onDelete="CASCADE"/>



    </changeSet>
</databaseChangeLog>